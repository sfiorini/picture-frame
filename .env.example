# Flask settings
SECRET_KEY=change-me-in-production
DEBUG=false

# Authentication - REQUIRED: Change this to a secure random string
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-api-key-here

# Photo settings
# Multiple directories can be separated by commas
PHOTO_DIRS=/photos
PHOTO_DELAY_SECONDS=10
DISPLAY_ORDER=random  # or 'sequential'

# Fade/transitions (milliseconds)
FADE_DURATION_MS=1000

# Cache settings
ENABLE_CACHE=true
